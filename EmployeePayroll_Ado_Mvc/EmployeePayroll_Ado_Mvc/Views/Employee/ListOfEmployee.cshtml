@model IEnumerable<DatabaseLayer.EmployeeModel>

@{
    ViewData["Title"] = "ListOfEmployee";
}
 <link rel="stylesheet" href="~/css/ListOfEmployee.css">
<div class="heading">
    <img src="~/asserts/Employee LOGO.jpeg"style=" width:50px;height:50px"/>
    <div>
        <spam style=" color:#82A70C">EMPLOYEE</span>
            <br/>
        <span style=" color:#82A70C">PAYROLL</span>
     </div>
</div>


<p>
    <a  asp-action="AddEmployee" class="btn bttn btn-primary ml-auto" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateEmployee", new { id = item.EmployeeId }, new { @class = "btn bttn btn-primary" }) &nbsp;&nbsp;&nbsp;
                @Html.ActionLink("Details", "EmployeeDetails", new { id = item.EmployeeId }, new { @class = "btn bttn btn-primary" }) 
                @Html.ActionLink("Delete", "DeleteEmployee", new { id = item.EmployeeId }, new { @class = "btn bttn btn-danger" }) 
            </td>
        </tr>
}
    </tbody>
</table>
